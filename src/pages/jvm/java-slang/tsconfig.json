{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "bin",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "moduleDetection": "force",
    "paths": {
      "#types/*": ["./src/types/*"],
      "#utils/*": ["./src/utils/*"],
      "#constants/*": ["./src/constants/*"],
      "#jvm/*": ["./src/*"]
    }
  },
}